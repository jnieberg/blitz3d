{
  "env": {
    "commonjs": true,
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "globals": {},
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/"],
  "rules": {
    "no-empty": "off",
    "no-undef": "off",
    "no-unused-vars": "off"
  },
  "settings": {
    "react": {
      "version": "latest" // "detect" automatically picks the version you have installed.
    }
  }
}
